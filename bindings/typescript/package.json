{
  "name": "@zylix/test",
  "version": "0.23.0",
  "description": "Zylix Test Framework - Cross-platform E2E testing for iOS, watchOS, Android, macOS, and Web",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "zylix",
    "testing",
    "e2e",
    "ios",
    "watchos",
    "android",
    "macos",
    "webdriver",
    "automation"
  ],
  "author": "Zylix Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kotsutsumi/zylix.git",
    "directory": "bindings/typescript"
  },
  "homepage": "https://zylix.dev",
  "bugs": {
    "url": "https://github.com/kotsutsumi/zylix/issues"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
